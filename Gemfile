source 'https://rubygems.org'

# Sinatra for web handling
gem 'sinatra', '~> 2.0', '>= 2.0.5'
# Puma is a simple, fast, threaded, and highly concurrent HTTP 1.1 server for Ruby/Rack applications
gem 'puma', '~> 3.12'
# Databases on Rails. Build a persistent domain model by mapping database tables to Ruby classes.
gem 'activerecord', '~> 5.2', '>= 5.2.2'
# Extends Sinatra with ActiveRecord helpers.
gem 'sinatra-activerecord', '~> 2.0', '>= 2.0.13'
# Rake is a Make-like program implemented in Ruby. Tasks and dependencies are specified in standard Ruby syntax.
gem 'rake', '~> 12.3', '>= 12.3.2'
# Pg is the Ruby interface to the PostgreSQL RDBMS. It works with PostgreSQL 9.2 and later.
gem 'pg', '~> 1.1', '>= 1.1.3'
